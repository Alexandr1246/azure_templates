{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Network/applicationGateways",
      "apiVersion": "2021-05-01",
      "location": "[resourceGroup().location]",
      "name": "Mystat",
      "properties": {
        "sku": {
          "name": "Standard_v2",
          "tier": "Standard_v2",
          "capacity": 2
        },
        "gatewayIPConfigurations": [
          {
            "name": "appGatewayConfig",
            "properties": {
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'itstepVnet', 'appGatewaySubnet')]"
              }
            }
          }
        ],
        "frontendIPConfigurations": [
          {
            "name": "publicFrontend",
            "properties": {
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'appGatewayPublicIP')]"
              }
            }
          },
          {
            "name": "privateFrontend",
            "properties": {
              "privateIPAddress": "10.0.0.4",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'itstepVnet', 'appGatewaySubnet')]"
              }
            }
          }
        ],
        "frontendPorts": [
          {
            "name": "httpPort",
            "properties": {
              "port": 80
            }
          }
        ],
        "listeners": [
          {
            "name": "publicListener",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[resourceId('Microsoft.Network/applicationGateways/frontendIPConfigurations', 'Mystat', 'publicFrontend')]"
              },
              "frontendPort": {
                "id": "[resourceId('Microsoft.Network/applicationGateways/frontendPorts', 'Mystat', 'httpPort')]"
              },
              "protocol": "Http"
            }
          },
          {
            "name": "privateListener",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[resourceId('Microsoft.Network/applicationGateways/frontendIPConfigurations', 'Mystat', 'privateFrontend')]"
              },
              "frontendPort": {
                "id": "[resourceId('Microsoft.Network/applicationGateways/frontendPorts', 'Mystat', 'httpPort')]"
              },
              "protocol": "Http"
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "backendPool",
            "properties": {
              "backendAddresses": [
                {
                  "ipAddress": "10.0.0.5"
                },
                {
                  "ipAddress": "10.0.0.6"
                }
              ]
            }
          }
        ],
        "backendHttpSettingsCollection": [
          {
            "name": "httpSettings",
            "properties": {
              "port": 80,
              "protocol": "Http",
              "cookieBasedAffinity": "Disabled"
            }
          }
        ],
        "probes": [
          {
            "name": "httpProbe",
            "properties": {
              "protocol": "Http",
              "host": "localhost",
              "path": "/health",
              "interval": "30",
              "timeout": "30",
              "unhealthyThreshold": "3"
            }
          }
        ]
      }
    }
  ]
}
