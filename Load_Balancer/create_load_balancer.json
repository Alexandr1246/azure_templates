{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Network/loadBalancers",
      "apiVersion": "2021-05-01",
      "name": "itstep-internal",
      "location": "[resourceGroup().location]",
      "properties": {
        "sku": { "name": "Standard" },
        "frontendIPConfigurations": [
          {
            "name": "itstepFrontend",
            "properties": {
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/itstep/subnets/Odesa')]"
              }
            }
          },
          {
            "name": "chernigivFrontend",
            "properties": {
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/itstep/subnets/Chernigiv')]"
              }
            }
          },
          {
            "name": "ivanoFrankivskFrontend",
            "properties": {
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/itstep/subnets/Ivano-Frankivsk')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2021-05-01",
      "name": "student-external-pip",
      "location": "[resourceGroup().location]",
      "properties": {
        "sku": { "name": "Standard" },
        "publicIPAllocationMethod": "Static"
      }
    },
    {
      "type": "Microsoft.Network/loadBalancers",
      "apiVersion": "2021-05-01",
      "name": "student-external",
      "location": "[resourceGroup().location]",
      "properties": {
        "sku": { "name": "Standard" },
        "frontendIPConfigurations": [
          {
            "name": "studentExternalFrontend",
            "properties": {
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses/student-external-pip')]"
              }
            }
          }
        ]
      }
    }
  ]
}
